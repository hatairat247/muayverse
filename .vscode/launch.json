    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MuayVerse",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/loading.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Python Server"
        },
        {
            "name": "Launch Warning Page",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/warning.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Python Server"
        },
        {
            "name": "Launch Homepage Direct",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Python Server"
        }
    ]
}